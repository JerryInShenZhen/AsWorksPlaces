<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/ll_item_01"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:lines="1"
            android:text="04"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:lines="1"
            android:text="周日"
            android:textSize="20sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_02"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ll_item_01"
        android:background="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/ll_item_03"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_item_02"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_soft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="偏软"
                android:lines="1"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/iv_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/yellow"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_smell"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="气味正常"
                android:lines="1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_helth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="健康"
                android:lines="1"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_kg"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="0.25"
        android:lines="1"
        android:textColor="@color/main_bottom_tab_textcolor_selected"
        android:textSize="40sp"/>
</RelativeLayout>